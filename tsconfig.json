{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 14",
  "compilerOptions": {
    "resolveJsonModule": true,
    "strict": true,
    "strictNullChecks": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "target": "es2020",
    "outDir": ".build",
    "module": "es2020",
    "moduleResolution": "node",
    "lib": [
      "es2020"
    ],
    "rootDir": "./",
    "typeRoots": [
      "./node_modules/@types",
      "./types/"
    ]
  },
  "include": [
    "src/**/*.ts",
    "types/**/*.ts"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
